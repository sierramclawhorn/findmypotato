<h1>Login:</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/sessions" method="POST">
  <input type="text" name="email" placeholder="Email:"></br>
  <input type="password" name="password" placeholder="Password:"><br>
  <input type="submit" value="Login!">
</form>